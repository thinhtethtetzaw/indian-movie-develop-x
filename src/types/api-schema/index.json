    "/api/v1/videos/search": {
      "get": {
        "tags": ["Search"],
        "summary": "Search or browse videos with pagination and filtering",
        "operationId": "fd98c593e0e6e771e36285f4a9dea36e",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Search query string (optional - if not provided, returns all videos)",
            "required": false,
            "schema": {
              "type": "string",
              "example": "action"
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "Number of results per page",
            "required": false,
            "schema": {
              "type": "integer",
              "example": 10
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "required": false,
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "type_id",
            "in": "query",
            "description": "Filter by type ID",
            "required": false,
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "year",
            "in": "query",
            "description": "Filter by release year",
            "required": false,
            "schema": {
              "type": "string",
              "example": "2024"
            }
          },
          {
            "name": "class",
            "in": "query",
            "description": "Filter by video class/category",
            "required": false,
            "schema": {
              "type": "string",
              "example": "Action,Thriller"
            }
          },
          {
            "name": "sort_by",
            "in": "query",
            "description": "Sort field (vod_time, vod_score, vod_hits_week)",
            "required": false,
            "schema": {
              "type": "string",
              "example": "vod_time"
            }
          },
          {
            "name": "sort_order",
            "in": "query",
            "description": "Sort order (asc, desc)",
            "required": false,
            "schema": {
              "type": "string",
              "example": "desc"
            }
          },
          {
            "name": "Accept-Language",
            "in": "header",
            "description": "Language code (en, cn, tw, ko, ja)",
            "required": true,
            "schema": {
              "type": "string",
              "example": "en"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchResult"
                }
              }
            }
          }
        }
      }
    },
